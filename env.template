# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Base URL (optional, defaults to OpenAI's API)
# For custom endpoints or proxies, uncomment and modify:
# OPENAI_BASE_URL=https://api.openai.com/v1

# OpenAI Model Configuration
# Temperature controls randomness (0.0-2.0, higher = more creative)
TEMPERATURE=1.0

# Model to use for optimization (e.g., gpt-4, gpt-3.5-turbo, o3-mini-medium)
MODEL=o3-mini-medium

# Maximum tokens for model responses
MAX_TOKENS=10000

# MCP Server Configuration
MCP_SERVER_LOG_LEVEL=INFO

# Gravitational Wave Data Configuration
# GPS time range for GW150914 event
GW150914_GPS_START=1126259446
GW150914_GPS_END=1126259478
SIGNAL_GPS_TIME=1126259462.427

# Default detectors for analysis
DEFAULT_DETECTORS=H1,L1

# Optimization Parameters
MAX_OPTIMIZATION_ITERATIONS=30
SNR_CONVERGENCE_THRESHOLD=0.005

# Temporary directory for data storage
TEMP_DATA_DIR=./data/

# Debug and Development Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Advanced Configuration
# Waveform approximant for template generation
WAVEFORM_APPROXIMANT=IMRPhenomD

# Frequency range for matched filtering
FREQUENCY_LOW_CUTOFF=20
FREQUENCY_HIGH_CUTOFF=2048

# SNR detection threshold
DETECTION_THRESHOLD=8.0

# High-pass filter frequency for noise reduction
HIGHPASS_FREQUENCY=15
